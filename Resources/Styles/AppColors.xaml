<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Paleta De Colores  -->
    <Color x:Key="PrimaryYellow">#EFB036</Color>
    <Color x:Key="PrimaryBlueLight">#3B6790</Color>
    <Color x:Key="PrimaryBlueDark">#23486A</Color>
    <Color x:Key="PrimaryTeal">#4C7B8B</Color>
    <Color x:Key="PrimaryRed">#BE3144</Color>
    <Color x:Key="PrimaryGray">#FBFBFB</Color>
    <Color x:Key="NeutralGray">#E6E6E6</Color>
    <Color x:Key="TextDark">#333333</Color>
    <Color x:Key="TextLight">#FFFFFF</Color>
    <Color x:Key="AppBlack">#242124</Color>

    <!--  🆕 Additional UI Colors  -->
    <Color x:Key="AppBackground">#F8F9FA</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="TextPrimary">#333333</Color>
    <Color x:Key="TextSecondary">#666666</Color>
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Danger">#EF4444</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Info">#3B82F6</Color>

    <!--  Define the Shadow resource first  -->
    <Shadow
        x:Key="MyShadow"
        Brush="LightGray"
        Opacity="0.9"
        Radius="2"
        Offset="2,2" />
</ResourceDictionary>