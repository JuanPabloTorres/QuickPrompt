<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--
        ==================================================================================
        QuickPrompt Design System - Spacing Tokens
        Version: 1.0
        Phase: 2 - Foundation
        Based on: docs/design-system/DESIGN_TOKENS.md
        Base Unit: 4px | Scale: xs(4) → 3xl(64)
        ==================================================================================
    -->

    <!--
        ============================================================================
        SPACING SCALE (4px Base Unit)
        All spacing is multiple of 4 for mathematical consistency
        ============================================================================
    -->

    <x:Double x:Key="SpacingXs">4</x:Double>
    <x:Double x:Key="SpacingSm">8</x:Double>
    <x:Double x:Key="SpacingMd">16</x:Double>
    <x:Double x:Key="SpacingLg">24</x:Double>
    <x:Double x:Key="SpacingXl">32</x:Double>
    <x:Double x:Key="Spacing2xl">48</x:Double>
    <x:Double x:Key="Spacing3xl">64</x:Double>

    <!--  Zero spacing (explicit)  -->
    <x:Double x:Key="SpacingNone">0</x:Double>

    <!--
        ============================================================================
        THICKNESS PRESETS (Uniform)
        For Margin and Padding properties
        ============================================================================
    -->

    <Thickness x:Key="ThicknessXs">4</Thickness>
    <Thickness x:Key="ThicknessSm">8</Thickness>
    <Thickness x:Key="ThicknessMd">16</Thickness>
    <Thickness x:Key="ThicknessLg">24</Thickness>
    <Thickness x:Key="ThicknessXl">32</Thickness>
    <Thickness x:Key="Thickness2xl">48</Thickness>
    <Thickness x:Key="Thickness3xl">64</Thickness>

    <!--
        ============================================================================
        THICKNESS PRESETS (Directional)
        Common directional padding patterns
        ============================================================================
    -->

    <!--  Horizontal Only (Left, Right)  -->
    <Thickness x:Key="ThicknessHorizontalSm">8,0,8,0</Thickness>
    <Thickness x:Key="ThicknessHorizontalMd">16,0,16,0</Thickness>
    <Thickness x:Key="ThicknessHorizontalLg">24,0,24,0</Thickness>

    <!--  Vertical Only (Top, Bottom)  -->
    <Thickness x:Key="ThicknessVerticalSm">0,8,0,8</Thickness>
    <Thickness x:Key="ThicknessVerticalMd">0,16,0,16</Thickness>
    <Thickness x:Key="ThicknessVerticalLg">0,24,0,24</Thickness>

    <!--  Asymmetric (Common patterns)  -->
    <Thickness x:Key="ThicknessPageMargin">16,20,16,16</Thickness>  
    <!--  Mobile: Left, Top (extra), Right, Bottom  -->
    <Thickness x:Key="ThicknessPageMarginLarge">24,32,24,24</Thickness>  
    <!--  Desktop  -->

    <!--  Card Padding  -->
    <Thickness x:Key="ThicknessCardPadding">16</Thickness>
    <Thickness x:Key="ThicknessCardPaddingLarge">24</Thickness>

    <!--
        ============================================================================
        COMPONENT-SPECIFIC SPACING
        Standardized spacing for common components
        ============================================================================
    -->

    <!--  Button Padding (Horizontal, Vertical)  -->
    <Thickness x:Key="ButtonPaddingSmall">12,6,12,6</Thickness>
    <Thickness x:Key="ButtonPaddingMedium">16,12,16,12</Thickness>
    <Thickness x:Key="ButtonPaddingLarge">20,14,20,14</Thickness>

    <!--  Input Padding  -->
    <Thickness x:Key="InputPadding">12,10,12,10</Thickness>
    <Thickness x:Key="InputPaddingSmall">8,6,8,6</Thickness>

    <!--
        ============================================================================
        LAYOUT SPACING
        Spacing for common layout patterns
        ============================================================================
    -->

    <!--  Card Spacing  -->
    <x:Double x:Key="CardGap">16</x:Double>  
    <!--  Gap between cards in grid/list  -->
    <x:Double x:Key="CardGapSmall">8</x:Double>

    <!--  List Item Spacing  -->
    <x:Double x:Key="ListItemPadding">12</x:Double>
    <x:Double x:Key="ListItemGap">8</x:Double>  
    <!--  Vertical gap between items  -->

    <!--  Section Spacing  -->
    <x:Double x:Key="SectionGap">32</x:Double>  
    <!--  Space between major sections  -->
    <x:Double x:Key="SectionGapLarge">48</x:Double>

    <!--  Form Spacing  -->
    <x:Double x:Key="FormFieldGap">16</x:Double>  
    <!--  Vertical gap between form fields  -->
    <x:Double x:Key="FormSectionGap">32</x:Double>  
    <!--  Gap between form sections  -->

</ResourceDictionary>
