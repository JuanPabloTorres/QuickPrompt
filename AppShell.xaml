<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuickPrompt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:aiPages="clr-namespace:QuickPrompt.Features.AI.Pages"
    xmlns:local="clr-namespace:QuickPrompt"
    xmlns:pages="clr-namespace:QuickPrompt.Pages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Quick Prompt"
    Shell.NavBarHasShadow="True"
    Shell.TabBarForegroundColor="{StaticResource PrimaryBlueDark}"
    Shell.TabBarTitleColor="{StaticResource PrimaryBlueDark}"
    Shell.TabBarUnselectedColor="{StaticResource PrimaryTeal}">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource AppBlack}" StatusBarStyle="LightContent" />
    </Shell.Behaviors>

    <TabBar>

        <ShellContent
            Title="AI"
            ContentTemplate="{DataTemplate aiPages:AiLauncherPage}"
            Route="AIWeb">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe86c;"
                    Size="24"
                    Color="{StaticResource PrimaryBlueLight}" />
            </ShellContent.Icon>
        </ShellContent>


        <ShellContent
            Title="Quick"
            ContentTemplate="{DataTemplate pages:QuickPromptPage}"
            Route="Quick">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xea0b;"
                    Size="24"
                    Color="{StaticResource PrimaryBlueLight}" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Create"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="Create">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe145;"
                    Size="24"
                    Color="{StaticResource PrimaryBlueLight}" />
            </ShellContent.Icon>
        </ShellContent>


        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:SettingPage}"
            Route="Setting">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe8b8;"
                    Size="24"
                    Color="{StaticResource PrimaryBlueLight}" />
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>
</Shell>