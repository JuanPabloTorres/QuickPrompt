<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuickPrompt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:aiPages="clr-namespace:QuickPrompt.Features.AI.Pages"
    xmlns:local="clr-namespace:QuickPrompt"
    xmlns:pages="clr-namespace:QuickPrompt.Pages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Quick Prompt"
    Shell.NavBarHasShadow="True"
    Shell.TabBarBackgroundColor="{AppThemeBinding Light={StaticResource SurfaceBackgroundLight}, Dark={StaticResource SurfaceBackgroundDark}}"
    Shell.TabBarForegroundColor="{AppThemeBinding Light={StaticResource PrimaryBlueDark}, Dark={StaticResource PrimaryBlueLight}}"
    Shell.TabBarTitleColor="{AppThemeBinding Light={StaticResource PrimaryBlueDark}, Dark={StaticResource PrimaryBlueLight}}"
    Shell.TabBarUnselectedColor="{AppThemeBinding Light={StaticResource PrimaryTeal}, Dark={StaticResource Gray400}}">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior 
            StatusBarColor="{AppThemeBinding Light={StaticResource SurfaceBackgroundLight}, Dark={StaticResource SurfaceBackgroundDark}}" 
            StatusBarStyle="{AppThemeBinding Light=DarkContent, Dark=LightContent}" />
    </Shell.Behaviors>

    <TabBar>

        <ShellContent
            Title="AI"
            ContentTemplate="{DataTemplate aiPages:AiLauncherPage}"
            Route="AIWeb">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe65e;"
                    Size="24"
                    Color="{AppThemeBinding Light={StaticResource PrimaryBlueLight}, Dark={StaticResource PrimaryBlueDark}}" />
            </ShellContent.Icon>
        </ShellContent>


        <ShellContent
            Title="Quick"
            ContentTemplate="{DataTemplate pages:QuickPromptPage}"
            Route="Quick">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xea0b;"
                    Size="24"
                    Color="{AppThemeBinding Light={StaticResource PrimaryBlueLight}, Dark={StaticResource PrimaryBlueDark}}" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Create"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="Create">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe145;"
                    Size="24"
                    Color="{AppThemeBinding Light={StaticResource PrimaryBlueLight}, Dark={StaticResource PrimaryBlueDark}}" />
            </ShellContent.Icon>
        </ShellContent>


        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:SettingPage}"
            Route="Setting">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe8b8;"
                    Size="24"
                    Color="{AppThemeBinding Light={StaticResource PrimaryBlueLight}, Dark={StaticResource PrimaryBlueDark}}" />
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>
</Shell>