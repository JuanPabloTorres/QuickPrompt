<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickPrompt.Pages.GeminiPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:QuickPrompt.Views"
    Title="Gemini">
    <!--  WebView para cargar Google Gemini  -->
    <!--<WebView
        x:Name="GeminiWebView"
        HorizontalOptions="FillAndExpand"
        Navigated="OnWebViewNavigated"
        Source="https://gemini.google.com/"
        VerticalOptions="FillAndExpand" />-->


    <Grid>
        <!--  WebView  -->
        <WebView
            x:Name="GeminiWebView"
            Navigated="OnWebViewNavigated"
            Navigating="OnWebViewNavigating"
            Source="https://gemini.google.com/" />


        <!--  Loading Overlay Layer  -->
        <view:ReusableLoadingOverlay
            x:Name="LoadingOverlay"
            IsVisible="False"
            Message="Loading Gemini..." />
    </Grid>
</ContentPage>