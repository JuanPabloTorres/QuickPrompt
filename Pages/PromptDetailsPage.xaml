<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickPrompt.Pages.PromptDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Prompt Details"
    BackgroundColor="WhiteSmoke"
    Shell.TitleColor="{StaticResource PrimaryBlueDark}">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding SharePromptCommand}"
            IsEnabled="{Binding IsShareButtonVisible}"
            Text="Compartir">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe80d;"
                    Color="{StaticResource PrimaryBlueLight}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>

        <ToolbarItem
            Command="{Binding NavigateToEditPromptCommand}"
            CommandParameter="{Binding PromptID}"
            Text="Editar">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe3c9;"
                    Color="{StaticResource PrimaryBlueLight}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout
            Padding="10"
            Spacing="10"
            VerticalOptions="FillAndExpand">
            <Label Style="{StaticResource TitleLabelStyle}" Text="{Binding PromptTitle}" />

            <Label Style="{StaticResource SubtitleLabelStyle}" Text="{Binding Description}" />

            <Label Style="{StaticResource NormalLabelStyle}" Text="{Binding PromptText}" />

            <ScrollView>
                <VerticalStackLayout>
                    <Label
                        Margin="0,10,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Complete the variables:"
                        TextColor="{StaticResource AppBlack}" />
                    <CollectionView IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" ItemsSource="{Binding Variables}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <VerticalStackLayout Padding="4" Spacing="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        Text="{Binding Name}"
                                        TextColor="{StaticResource AppBlack}" />

                                    <!--  Entrada para el TÃ­tulo  -->
                                    <Border
                                        Padding="5"
                                        Stroke="{StaticResource AppBlack}"
                                        StrokeShape="RoundRectangle 5,5,5,5"
                                        StrokeThickness="1">
                                        <VerticalStackLayout>

                                            <Entry
                                                Placeholder="Enter the value..."
                                                Text="{Binding Value}"
                                                TextColor="{StaticResource AppBlack}" />
                                        </VerticalStackLayout>
                                    </Border>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.Footer />
                    </CollectionView>


                </VerticalStackLayout>
            </ScrollView>

            <Label
                Margin="0,10,0,0"
                FontAttributes="Italic"
                FontSize="18"
                HorizontalOptions="Center"
                IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                Text="{Binding FinalPrompt, StringFormat='Prompt Generated: {0}'}"
                TextColor="{StaticResource AppBlack}" />

            <Button
                Margin="0,10,0,0"
                Command="{Binding GeneratePromptCommand}"
                IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                Style="{StaticResource CriticalButtonStyle}"
                Text="Generate Prompt">

                <Button.ImageSource>
                    <FontImageSource
                        FontFamily="MaterialIconsOutlined-Regular"
                        Glyph="&#xe26c;"
                        Color="{StaticResource TextLight}" />
                </Button.ImageSource>
            </Button>

            <Button
                Command="{Binding SendPromptToChatGPTCommand}"
                IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                Style="{StaticResource PrimaryButtonStyle}"
                Text="Send To ChatGPT"
                VerticalOptions="End">

                <Button.ImageSource>
                    <FontImageSource
                        FontFamily="MaterialIconsOutlined-Regular"
                        Glyph="&#xe163;"
                        Color="{StaticResource AppBlack}" />
                </Button.ImageSource>
            </Button>

            <!--  Indicador de Carga  -->
            <ActivityIndicator
                HeightRequest="50"
                IsRunning="{Binding IsLoading}"
                IsVisible="{Binding IsLoading}"
                VerticalOptions="Center"
                Color="{StaticResource PrimaryTeal}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>