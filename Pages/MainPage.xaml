<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickPrompt.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:QuickPrompt.Views"
    xmlns:buttons="clr-namespace:QuickPrompt.Components.Buttons"
    xmlns:inputs="clr-namespace:QuickPrompt.Components.Inputs"
    BackgroundColor="WhiteSmoke"
    Shell.PresentationMode="Animated"
    AutomationProperties.Name="Create Prompt Page"
    AutomationProperties.HelpText="Create and customize AI prompts with variables">

    <Shell.TitleView>

        <Label
            FontFamily="Designer"
            FontSize="18"
            Text="Create"
            TextColor="{StaticResource PrimaryBlueDark}"
            VerticalOptions="Center" />
    </Shell.TitleView>

    <!--  Barra de herramientas  -->
    <ContentPage.ToolbarItems>
        <!--  Botón de Guardar  -->
        <ToolbarItem Command="{Binding SavePromptCommand}" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe86c;"
                    Color="{StaticResource PrimaryBlueDark}" />
            </ToolbarItem.IconImageSource>
            <ToolTipProperties.Text>
                Click to Save data
            </ToolTipProperties.Text>
            <AutomationProperties.Name>Save Prompt</AutomationProperties.Name>
            <AutomationProperties.HelpText>Save the current prompt to your library</AutomationProperties.HelpText>
        </ToolbarItem>

        <!--  Nuevo botón: Advanced Prompt Builder  -->
        <ToolbarItem Command="{Binding GoToAdvancedBuilderCommand}" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xea3c;"
                    Color="{StaticResource PrimaryBlueDark}" />
            </ToolbarItem.IconImageSource>
            <ToolTipProperties.Text>
                Advanced Prompt Builder
            </ToolTipProperties.Text>
            <AutomationProperties.Name>Advanced Builder</AutomationProperties.Name>
            <AutomationProperties.HelpText>Open the advanced step-by-step prompt builder</AutomationProperties.HelpText>
        </ToolbarItem>


        <!--  Import Json  -->
        <ToolbarItem Command="{Binding ImportPromptCommand}" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe9fc;"
                    Color="{StaticResource PrimaryBlueDark}" />
            </ToolbarItem.IconImageSource>
            <ToolTipProperties.Text>
                Import Json
            </ToolTipProperties.Text>
            <AutomationProperties.Name>Import Prompt</AutomationProperties.Name>
            <AutomationProperties.HelpText>Import a prompt from JSON file</AutomationProperties.HelpText>
        </ToolbarItem>

        <!--  Botón para resetear posición del botón flotante  -->
        <ToolbarItem Clicked="ResetFloatingButtonPosition">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe8aa;"
                    Color="{StaticResource PrimaryBlueDark}" />
            </ToolbarItem.IconImageSource>
            <ToolTipProperties.Text>
                Reset Floating Button Position
            </ToolTipProperties.Text>
            <AutomationProperties.Name>Reset Floating Button</AutomationProperties.Name>
            <AutomationProperties.HelpText>Reset the variable button to default position</AutomationProperties.HelpText>
        </ToolbarItem>

        <!--  Botón de Copiar  -->
        <ToolbarItem Command="{Binding ClearTextCommand}" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe5c9;"
                    Color="{StaticResource PrimaryRed}" />
            </ToolbarItem.IconImageSource>
            <ToolTipProperties.Text>
                Click to Clear Text
            </ToolTipProperties.Text>
            <AutomationProperties.Name>Clear All Fields</AutomationProperties.Name>
            <AutomationProperties.HelpText>Clear all input fields and reset the form</AutomationProperties.HelpText>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <AbsoluteLayout>

        <!--  Contenido Principal Scrollable  -->
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"
                    AutomationProperties.Name="Prompt Creation Form"
                    AutomationProperties.HelpText="Scroll to access all prompt fields">
            <Grid
                Margin="10"
                RowDefinitions="Auto,Auto,Auto,Auto,Auto,*,Auto,Auto"
                RowSpacing="10">

                <!--  Overlay de carga  -->
                <views:ReusableLoadingOverlay
                    x:Name="LoadingOverlay"
                    Grid.Row="0"
                    Grid.RowSpan="8"
                    IsVisible="{Binding IsLoading}"
                    Message="Loading..." />

                <!--  Título principal  -->
                <Label
                    Grid.Row="0"
                    Style="{StaticResource TitleLabelStyle}"
                    Text="Prompt Management "
                    AutomationProperties.IsInAccessibleTree="True"
                    AutomationProperties.Name="Page Title: Prompt Management" />

                <!--  Explicación breve  -->
                <Label
                    Grid.Row="1"
                    Style="{StaticResource BodySmallTextStyle}"
                    Text="Create your prompt by completing the title, description, and main prompt below. You can insert variables using the floating &lt;&gt; button."
                    TextColor="Gray"
                    AutomationProperties.IsInAccessibleTree="True"
                    AutomationProperties.Name="Instructions" />

                <!--  Línea divisoria  -->
                <BoxView Grid.Row="2" Style="{StaticResource DividerLineStyle}"
                         AutomationProperties.IsInAccessibleTree="False" />

                <!--  Campo: Title  -->
                <inputs:TextInput 
                    Grid.Row="3"
                    Label="Title"
                    Placeholder="Example: Blog Post Generator"
                    Text="{Binding PromptTitle}"
                    ShowLabel="True"
                    AutomationProperties.Name="Prompt Title Input"
                    AutomationProperties.HelpText="Enter a descriptive title for your prompt" />

                <!--  Campo: Description  -->
                <VerticalStackLayout Grid.Row="4">
                    <Label
                        FontSize="14"
                        HorizontalOptions="Start"
                        Style="{StaticResource BodySmallTextStyle}"
                        FontAttributes="Bold"
                        Text="Description (optional)"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationProperties.Name="Description Label" />
                    <Border Style="{StaticResource InputBorderStyle}">
                        <Editor
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            Placeholder="Short explanation of what this prompt does..."
                            Style="{StaticResource InputEditorStyle}"
                            Text="{Binding PromptDescription}"
                            AutomationProperties.Name="Description Input"
                            AutomationProperties.HelpText="Optional: Add a description explaining what this prompt does" />
                    </Border>
                </VerticalStackLayout>

                <!--  Campo: Categoría  -->
                <VerticalStackLayout Grid.Row="5">
                    <Label
                        HorizontalOptions="Start"
                        Style="{StaticResource TitleLabelStyle}"
                        Text="Category"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationProperties.Name="Category Label" />

                    <Border Style="{StaticResource InputBorderStyle}">
                        <Picker
                            Title="Select category"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            ItemDisplayBinding="{Binding .}"
                            ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                            Style="{StaticResource InputPickerStyle}"
                            AutomationProperties.Name="Category Picker"
                            AutomationProperties.HelpText="Select a category for organizing your prompt" />
                    </Border>
                </VerticalStackLayout>


                <!--  Campo: Prompt  -->
                <VerticalStackLayout Grid.Row="6">

                    <Label
                        Grid.Row="5"
                        HorizontalOptions="Start"
                        Style="{StaticResource TitleLabelStyle}"
                        Text="Prompt Template "
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationProperties.Name="Prompt Template Label" />
                    <Border Grid.Row="5" Style="{StaticResource InputBorderStyle}">
                        <Editor
                            x:Name="PromptRawEditor"
                            CursorPosition="{Binding CursorPosition, Mode=TwoWay}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            IsVisible="{Binding IsVisualModeActive, Converter={StaticResource InverseBoolConverter}}"
                            Placeholder="Example: Generate a message for &lt;recipient&gt; about &lt;subject&gt;"
                            SelectionLength="{Binding SelectionLength, Mode=TwoWay}"
                            Style="{StaticResource PromptEditorStyle}"
                            Text="{Binding PromptText}"
                            AutomationProperties.Name="Prompt Template Input"
                            AutomationProperties.HelpText="Enter your prompt text. Use angle brackets to mark variables like recipient or subject" />
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="7" Padding="5">

                    <!--  Condición para mostrar el bloque  -->
                    <VerticalStackLayout.IsVisible>
                        <MultiBinding Converter="{StaticResource PromptReadyToShowConverter}">
                            <Binding Path="IsLoading" />
                            <Binding Path="PromptText" />
                        </MultiBinding>
                    </VerticalStackLayout.IsVisible>

                    <!--  Guía inicial para el usuario  -->
                    <Label
                        Margin="5"
                        Style="{StaticResource BodySmallTextStyle}"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Text="💡 Switch between visual and text modes to edit your prompt. Tap any &lt;variable&gt; chip to rename it."
                        TextColor="Gray"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationProperties.Name="Mode Switching Tip" />

                    <!--  Botones de modo  -->
                    <HorizontalStackLayout Margin="5" HorizontalOptions="Center" Spacing="8">

                        <buttons:SecondaryButton
                            Text="Text Mode"
                            Command="{Binding SwitchToEditorCommand}"
                            AutomationProperties.Name="Switch to Text Mode"
                            AutomationProperties.HelpText="Switch to text editing mode for raw prompt input">
                            <buttons:SecondaryButton.ImageSource>
                                <FontImageSource
                                    FontFamily="MaterialIconsOutlined-Regular"
                                    Glyph="&#xe5d8;"
                                    Color="{StaticResource PrimaryBlue}" />
                            </buttons:SecondaryButton.ImageSource>
                        </buttons:SecondaryButton>

                        <buttons:PrimaryButton
                            Text="Visual Mode"
                            Command="{Binding SwitchToChipsCommand}"
                            AutomationProperties.Name="Switch to Visual Mode"
                            AutomationProperties.HelpText="Switch to visual mode to edit variables as chips">
                            <buttons:PrimaryButton.ImageSource>
                                <FontImageSource
                                    FontFamily="MaterialIconsOutlined-Regular"
                                    Glyph="&#xe5db;"
                                    Color="White" />
                            </buttons:PrimaryButton.ImageSource>
                        </buttons:PrimaryButton>
                    </HorizontalStackLayout>

                    <!--  Contenedor de chips dentro de ScrollView que sí funciona  -->
                    <ScrollView VerticalOptions="Fill"
                                AutomationProperties.Name="Variable Chips Container"
                                AutomationProperties.HelpText="Visual representation of prompt variables as editable chips">
                        <VerticalStackLayout Padding="5" Spacing="5">
                            <FlexLayout
                                x:Name="PromptChipContainer"
                                AlignItems="Center"
                                BackgroundColor="GhostWhite"
                                Direction="Row"
                                IsVisible="{Binding IsVisualModeActive}"
                                JustifyContent="Start"
                                Style="{StaticResource InputBorderStyle}"
                                Wrap="Wrap" />
                        </VerticalStackLayout>
                    </ScrollView>

                    <!--  Consejo visual debajo del contenedor  -->
                    <Label
                        x:Name="ChipHintLabel"
                        Margin="5"
                        Style="{StaticResource CaptionTextStyle}"
                        HorizontalTextAlignment="Center"
                        Text="💡 Tap on a variable chip (like &lt;topic&gt;) to edit its name."
                        TextColor="Gray"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationProperties.Name="Chip Editing Tip" />
                </VerticalStackLayout>
            </Grid>
        </ScrollView>

        <!--  Botón flotante  -->
        <Button
            x:Name="FloatingButton"
            Margin="20"
            AbsoluteLayout.LayoutBounds="0,0,50,50"
            AbsoluteLayout.LayoutFlags="None"
            Command="{Binding CreateVariableCommand}"
            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
            Style="{StaticResource FloatingButtonStyle}"
            AutomationProperties.Name="Create Variable Button"
            AutomationProperties.HelpText="Tap to create a variable from selected text. You can also drag this button to reposition it">

            <Button.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnPanUpdated" />
                <TapGestureRecognizer Tapped="OnFloatingButtonTapped" />
            </Button.GestureRecognizers>

            <Button.ImageSource>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe86f;"
                    Color="{StaticResource White}" />
            </Button.ImageSource>
        </Button>
    </AbsoluteLayout>
</ContentPage>