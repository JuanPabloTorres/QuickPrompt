<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickPrompt.Pages.SettingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceBackgroundLight}, Dark={StaticResource SurfaceBackgroundDark}}">

    <Shell.TitleView>
        <Label
            FontFamily="Nasa21"
            FontSize="18"
            Text="Settings"
            TextColor="{StaticResource PrimaryBlueDark}"
            VerticalOptions="Center" />
    </Shell.TitleView>

    <!--  âœ… FIX: Wrap ScrollView and ActivityIndicator in a Grid  -->
    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="20">

                <!--  âœ… UX IMPROVEMENTS: Appearance Section  -->
                <Border
                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceCardLight}, Dark={StaticResource SurfaceCardDark}}"
                    Stroke="{AppThemeBinding Light={StaticResource BorderLightLight}, Dark={StaticResource BorderLightDark}}"
                    StrokeThickness="1"
                    Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    
                    <VerticalStackLayout Spacing="0">
                        <!--  Section Header  -->
                        <Label
                            Text="ðŸŽ¨ Appearance"
                            FontFamily="Nasa21"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="{StaticResource PrimaryBlueDark}"
                            Padding="16,16,16,8" />
                        
                        <BoxView
                            HeightRequest="1"
                            Color="{AppThemeBinding Light={StaticResource BorderLightLight}, Dark={StaticResource BorderLightDark}}"
                            Margin="16,0" />
                        
                        <!--  Theme Picker  -->
                        <VerticalStackLayout Padding="16" Spacing="8">
                            <Label
                                Text="Theme"
                                FontFamily="Nasa21"
                                FontSize="14"
                                TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                            
                            <Border
                                BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceInputLight}, Dark={StaticResource SurfaceInputDark}}"
                                Stroke="{AppThemeBinding Light={StaticResource BorderDefaultLight}, Dark={StaticResource BorderDefaultDark}}"
                                StrokeThickness="1"
                                Padding="4,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Picker
                                    ItemsSource="{Binding ThemeOptions}"
                                    SelectedIndex="{Binding SelectedThemeIndex, Mode=TwoWay}"
                                    FontFamily="Nasa21"
                                    FontSize="15"
                                    TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                                    HeightRequest="46"
                                    VerticalOptions="Center" />
                            </Border>
                            
                            <Label
                                Text="Choose between light, dark, or match your device's theme"
                                FontFamily="Nasa21"
                                FontSize="12"
                                TextColor="{AppThemeBinding Light={StaticResource TextTertiaryLight}, Dark={StaticResource TextTertiaryDark}}"
                                Margin="0,4,0,0" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!--  User Guide Section  -->
                <Border
                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceCardLight}, Dark={StaticResource SurfaceCardDark}}"
                    Stroke="{AppThemeBinding Light={StaticResource BorderLightLight}, Dark={StaticResource BorderLightDark}}"
                    StrokeThickness="1"
                    Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    
                    <VerticalStackLayout Spacing="0">
                        <Label
                            Text="ðŸ“š User Guide"
                            FontFamily="Nasa21"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="{StaticResource PrimaryBlueDark}"
                            Padding="16,16,16,8" />
                        
                        <BoxView
                            HeightRequest="1"
                            Color="{AppThemeBinding Light={StaticResource BorderLightLight}, Dark={StaticResource BorderLightDark}}"
                            Margin="16,0" />
                        
                        <Border Padding="16,12" BackgroundColor="Transparent">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnGuideTapped" />
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12">
                                <Label
                                    FontFamily="MaterialIconsOutlined-Regular"
                                    Text="&#xe8fd;"
                                    FontSize="24"
                                    TextColor="{StaticResource InfoColor}"
                                    VerticalOptions="Center" />
                                <VerticalStackLayout Spacing="2" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                                    <Label
                                        Text="Getting Started"
                                        FontFamily="Nasa21"
                                        FontSize="15"
                                        FontAttributes="Bold"
                                        TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}" />
                                    <Label
                                        Text="Learn how to use QuickPrompt"
                                        FontFamily="Nasa21"
                                        FontSize="12"
                                        TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                                </VerticalStackLayout>
                                <Label
                                    FontFamily="MaterialIconsOutlined-Regular"
                                    Text="&#xe5e1;"
                                    FontSize="20"
                                    TextColor="{StaticResource Gray400}"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>
                        
                        <BoxView
                            HeightRequest="1"
                            Color="{AppThemeBinding Light={StaticResource BorderLightLight}, Dark={StaticResource BorderLightDark}}"
                            Margin="16,0" />
                        
                        <Border Padding="16,12" BackgroundColor="Transparent">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenGuideLinkCommand}" />
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12">
                                <Label
                                    FontFamily="MaterialIconsOutlined-Regular"
                                    Text="&#xe8e8;"
                                    FontSize="24"
                                    TextColor="{StaticResource InfoColor}"
                                    VerticalOptions="Center" />
                                <VerticalStackLayout Spacing="2" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                                    <Label
                                        Text="Privacy Policy &amp; Information"
                                        FontFamily="Nasa21"
                                        FontSize="15"
                                        FontAttributes="Bold"
                                        TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}" />
                                    <Label
                                        Text="View our privacy policy and app details"
                                        FontFamily="Nasa21"
                                        FontSize="12"
                                        TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                                </VerticalStackLayout>
                                <Label
                                    FontFamily="MaterialIconsOutlined-Regular"
                                    Text="&#xe5e1;"
                                    FontSize="20"
                                    TextColor="{StaticResource Gray400}"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <!--  Database Section  -->
                <Border
                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceCardLight}, Dark={StaticResource SurfaceCardDark}}"
                    Stroke="{AppThemeBinding Light={StaticResource BorderLightLight}, Dark={StaticResource BorderLightDark}}"
                    StrokeThickness="1"
                    Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    
                    <VerticalStackLayout Spacing="0">
                        <Label
                            Text="ðŸ—„ï¸ Database"
                            FontFamily="Nasa21"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="{StaticResource PrimaryBlueDark}"
                            Padding="16,16,16,8" />
                        
                        <BoxView
                            HeightRequest="1"
                            Color="{AppThemeBinding Light={StaticResource BorderLightLight}, Dark={StaticResource BorderLightDark}}"
                            Margin="16,0" />
                        
                        <VerticalStackLayout Padding="16" Spacing="12">
                            <Button
                                Command="{Binding RestoreDatabaseCommand}"
                                Text="Restore Database"
                                FontFamily="Nasa21"
                                FontSize="15"
                                FontAttributes="Bold"
                                BackgroundColor="{StaticResource WarningColor}"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="48">
                                <Button.ImageSource>
                                    <FontImageSource
                                        FontFamily="MaterialIconsOutlined-Regular"
                                        Glyph="&#xe92b;"
                                        Color="White"
                                        Size="20" />
                                </Button.ImageSource>
                            </Button>
                            
                            <Label
                                Text="âš ï¸ This will reset all your data to factory defaults"
                                FontFamily="Nasa21"
                                FontSize="12"
                                TextColor="{StaticResource WarningDark}"
                                HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!--  App Information Section  -->
                <Border
                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceCardLight}, Dark={StaticResource SurfaceCardDark}}"
                    Stroke="{AppThemeBinding Light={StaticResource BorderLightLight}, Dark={StaticResource BorderLightDark}}"
                    StrokeThickness="1"
                    Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    
                    <VerticalStackLayout Spacing="0">
                        <Label
                            Text="â„¹ï¸ App Information"
                            FontFamily="Nasa21"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="{StaticResource PrimaryBlueDark}"
                            Padding="16,16,16,8" />
                        
                        <BoxView
                            HeightRequest="1"
                            Color="{AppThemeBinding Light={StaticResource BorderLightLight}, Dark={StaticResource BorderLightDark}}"
                            Margin="16,0" />
                        
                        <HorizontalStackLayout Padding="16" Spacing="8" HorizontalOptions="Center">
                            <Label
                                Text="Version:"
                                FontFamily="Nasa21"
                                FontSize="14"
                                TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                            <Label
                                Text="{Binding AppVersion}"
                                FontFamily="Nasa21"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!--  Loading Overlay (on top of ScrollView)  -->
        <ActivityIndicator
            IsRunning="{Binding IsLoading}"
            IsVisible="{Binding IsLoading}"
            Color="{StaticResource PrimaryColor}"
            WidthRequest="50"
            HeightRequest="50"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
    </Grid>
</ContentPage>