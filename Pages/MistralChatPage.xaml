<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickPrompt.Pages.MistralChatPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:QuickPrompt.Views"
    BackgroundColor="WhiteSmoke">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <Shell.TitleView>
        <view:TitleHeader
            Title="Mistral AI"
            BackCommand="{Binding MyBackCommand}"
            Glyph="&#xe5cd;"
            ShowBackButton="True" />
    </Shell.TitleView>

    <Grid>
        <!--  WebView for Mistral Chat  -->
        <WebView
            x:Name="MistralWebView"
            Navigated="OnWebViewNavigated"
            Navigating="OnWebViewNavigating"
            Source="https://mistral.ai/" />

        <!--  Loading Overlay Layer  -->
        <view:ReusableLoadingOverlay
            x:Name="LoadingOverlay"
            Padding="10"
            IsVisible="False"
            Message="Loading Mistral..." />
    </Grid>
</ContentPage>