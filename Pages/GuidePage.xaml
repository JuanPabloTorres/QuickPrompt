<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickPrompt.Pages.GuidePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:QuickPrompt.Views"
    BackgroundColor="WhiteSmoke"
    Routing.Route="GuidePage">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <Shell.TitleView>
        <view:TitleHeader
            Title="Quick Prompt Guide"
            BackCommand="{Binding MyBackCommand}"
            Glyph="&#xe5cd;"
            ShowBackButton="True" />
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!--  Título Bienvenida  -->
            <Label
                FontAttributes="Bold"
                FontSize="26"
                HorizontalOptions="Center"
                Text="📘 Welcome to QuickPrompt"
                TextColor="#0A84FF" />

            <!--  Línea divisoria  -->
            <BoxView Style="{StaticResource DividerLineStyle}" />

            <!--  Introducción corta  -->
            <Label
                FontSize="17"
                Text="QuickPrompt lets you easily create, organize, and reuse AI instructions (prompts) for ChatGPT, Gemini, or Grok."
                TextColor="Black" />

            <!--  ¿Qué es un prompt?  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="✨ What is a Prompt?"
                TextColor="#0A84FF" />

            <Label
                FontSize="16"
                Text="A prompt is simply the instruction you give to an AI to get the answer or content you need."
                TextColor="Black" />

            <!--  Paso 1: Crear o elegir  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="1️⃣ Choose or Create a Prompt"
                TextColor="#0A84FF" />

            <Label
                FontSize="16"
                Text="Pick a ready-made prompt from our library or create your own. You can easily personalize these prompts for different uses."
                TextColor="Black" />

            <!--  Paso 2: Añadir variables  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="2️⃣ Add Variables to Personalize"
                TextColor="#0A84FF" />

            <Label
                FontSize="16"
                Text="Use angle brackets &lt;&gt; to mark parts you want to change later."
                TextColor="Black" />

            <Border
                Padding="15"
                BackgroundColor="#F0F0F0"
                Stroke="#DDDDDD"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1">
                <Label
                    FontSize="15"
                    Text="Example: Write an ad for &lt;product_name&gt; targeting &lt;audience&gt;."
                    TextColor="Black" />
            </Border>

            <!--  Paso 3: Completar variables  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="3️⃣ Fill in Your Variables"
                TextColor="#0A84FF" />

            <Label
                FontSize="16"
                Text="Tap 'Generate' to fill in your variables easily:"
                TextColor="Black" />

            <Border
                Padding="15"
                BackgroundColor="#F0F0F0"
                Stroke="#DDDDDD"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1">
                <VerticalStackLayout>
                    <Label
                        FontSize="15"
                        Text="• &lt;product_name&gt; → QuickPrompt"
                        TextColor="Black" />
                    <Label
                        FontSize="15"
                        Text="• &lt;audience&gt; → Beginners"
                        TextColor="Black" />
                </VerticalStackLayout>
            </Border>

            <!--  Paso 4: Copiar y usar  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="4️⃣ Copy and Use Your Prompt"
                TextColor="#0A84FF" />

            <Label
                FontSize="16"
                Text="Your prompt is now ready! Copy it into ChatGPT, Gemini, or Grok to get instant results."
                TextColor="Black" />

            <!--  Paso 5: Guardar favoritos  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="⭐ Save Your Favorite Prompts"
                TextColor="#0A84FF" />

            <Label
                FontSize="16"
                Text="Tap the lightning ⚡ icon next to prompts to quickly access your favorites anytime."
                TextColor="Black" />

            <!--  Ejemplo Completo  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="🔍 Quick Example:"
                TextColor="#0A84FF" />

            <Border
                Padding="15"
                BackgroundColor="#F6F6F6"
                Stroke="#CCCCCC"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1">
                <VerticalStackLayout>
                    <Label
                        FontSize="15"
                        Text="Prompt: Write an ad for &lt;product_name&gt; for &lt;audience&gt;."
                        TextColor="#333" />
                    <Label
                        Margin="0,5,0,0"
                        FontSize="15"
                        Text="Filled: Write an ad for QuickPrompt for beginners."
                        TextColor="#555" />
                </VerticalStackLayout>
            </Border>

            <!--  Call to Action  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="🚀 Start Now!"
                TextColor="#0A84FF" />

            <Label
                FontSize="16"
                Text="Tap below to create your first prompt and unlock your AI's potential!"
                TextColor="Black" />

            <Button
                Margin="12"
                Padding="12"
                BackgroundColor="#0A84FF"
                Clicked="OnNavigateToCreatePrompt"
                CornerRadius="10"
                Text="⚡ Create Your Prompt"
                TextColor="White" />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>