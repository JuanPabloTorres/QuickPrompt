<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="QuickPrompt.Views.PromptFilterBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:enums="clr-namespace:QuickPrompt.Tools"
    x:Name="Root"
    IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">

    <VerticalStackLayout Spacing="8">
        <!--  Filtro de fecha  -->

        <Grid
            ColumnDefinitions="*,*"
            ColumnSpacing="5"
            HorizontalOptions="Fill"
            RowDefinitions="*,*,*"
            RowSpacing="5">

            <!--  Favorites  -->
            <Button
                Grid.Row="0"
                Grid.Column="0"
                Command="{Binding SelectFilterCommand}"
                CommandParameter="{x:Static enums:Filters.Favorites}"
                Style="{StaticResource FilterButtonStyle}"
                Text="Favorites"
                TextColor="{StaticResource AppBlack}">
                <Button.Triggers>
                    <DataTrigger
                        Binding="{Binding SelectedDateFilter}"
                        TargetType="Button"
                        Value="{x:Static enums:Filters.Favorites}">
                        <Setter Property="BackgroundColor" Value="Gray" />
                        <Setter Property="BorderColor" Value="Gray" />
                        <Setter Property="TextColor" Value="White" />
                    </DataTrigger>
                </Button.Triggers>
                <Button.ImageSource>
                    <FontImageSource
                        FontFamily="MaterialIconsOutlined-Regular"
                        Glyph="&#xe3e7;"
                        Color="{StaticResource AppBlack}" />
                </Button.ImageSource>
            </Button>
            <!--  Non-Favorites  -->
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Command="{Binding SelectFilterCommand}"
                CommandParameter="{x:Static enums:Filters.NonFavorites}"
                Style="{StaticResource FilterButtonStyle}"
                Text="Not Favorites"
                TextColor="{StaticResource AppBlack}">

                <Button.Triggers>
                    <DataTrigger
                        Binding="{Binding SelectedDateFilter}"
                        TargetType="Button"
                        Value="{x:Static enums:Filters.NonFavorites}">
                        <Setter Property="BackgroundColor" Value="Gray" />
                        <Setter Property="BorderColor" Value="Gray" />
                        <Setter Property="TextColor" Value="White" />
                    </DataTrigger>
                </Button.Triggers>
                <Button.ImageSource>
                    <FontImageSource
                        FontFamily="MaterialIconsOutlined-Regular"
                        Glyph="&#xe3e6;"
                        Color="{StaticResource AppBlack}" />
                </Button.ImageSource>
            </Button>

            <!--  Today  -->
            <Button
                Grid.Row="1"
                Grid.Column="0"
                Command="{Binding SelectFilterCommand}"
                CommandParameter="{x:Static enums:Filters.Today}"
                Style="{StaticResource FilterButtonStyle}"
                Text="Today"
                TextColor="{StaticResource AppBlack}">

                <Button.Triggers>
                    <DataTrigger
                        Binding="{Binding SelectedDateFilter}"
                        TargetType="Button"
                        Value="{x:Static enums:Filters.Today}">
                        <Setter Property="BackgroundColor" Value="Gray" />
                        <Setter Property="BorderColor" Value="Gray" />
                        <Setter Property="TextColor" Value="White" />
                    </DataTrigger>
                </Button.Triggers>
                <Button.ImageSource>
                    <FontImageSource
                        FontFamily="MaterialIconsOutlined-Regular"
                        Glyph="&#xe8df;"
                        Color="{StaticResource AppBlack}" />
                </Button.ImageSource>
            </Button>

            <!--  Last 7 Days  -->
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Command="{Binding SelectFilterCommand}"
                CommandParameter="{x:Static enums:Filters.Last7Days}"
                Style="{StaticResource FilterButtonStyle}"
                Text="7 Days"
                TextColor="{StaticResource AppBlack}">

                <Button.Triggers>
                    <DataTrigger
                        Binding="{Binding SelectedDateFilter}"
                        TargetType="Button"
                        Value="{x:Static enums:Filters.Last7Days}">
                        <Setter Property="BackgroundColor" Value="Gray" />
                        <Setter Property="BorderColor" Value="Gray" />
                        <Setter Property="TextColor" Value="White" />
                    </DataTrigger>
                </Button.Triggers>
                <Button.ImageSource>
                    <FontImageSource
                        FontFamily="MaterialIconsOutlined-Regular"
                        Glyph="&#xe916;"
                        Color="{StaticResource AppBlack}" />
                </Button.ImageSource>
            </Button>

            <!--  All  -->
            <Button
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Command="{Binding SelectFilterCommand}"
                CommandParameter="{x:Static enums:Filters.All}"
                Style="{StaticResource FilterButtonStyle}"
                Text="All"
                TextColor="{StaticResource AppBlack}">

                <Button.Triggers>
                    <DataTrigger
                        Binding="{Binding SelectedDateFilter}"
                        TargetType="Button"
                        Value="{x:Static enums:Filters.All}">
                        <Setter Property="BackgroundColor" Value="Gray" />
                        <Setter Property="BorderColor" Value="Gray" />
                        <Setter Property="TextColor" Value="White" />
                    </DataTrigger>
                </Button.Triggers>
                <Button.ImageSource>
                    <FontImageSource
                        FontFamily="MaterialIconsOutlined-Regular"
                        Glyph="&#xe8ef;"
                        Color="{StaticResource AppBlack}" />
                </Button.ImageSource>
            </Button>
        </Grid>


        <!--  BÃºsqueda por texto  -->
        <Border Style="{StaticResource InputBorderStyle}">
            <Grid ColumnDefinitions="*, Auto">
                <Entry
                    Grid.Column="0"
                    Placeholder="Type your search here..."
                    Style="{StaticResource SearchEntryStyle}"
                    Text="{Binding SearchText, Source={x:Reference Root}, Mode=TwoWay}" />
            </Grid>
        </Border>

        <Button
            Grid.Column="1"
            Command="{Binding SearchCommand, Source={x:Reference Root}}"
            Style="{StaticResource SearchButtonStyle}">
            <Button.ImageSource>
                <FontImageSource
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe8b6;"
                    Color="{StaticResource White}" />
            </Button.ImageSource>
        </Button>
    </VerticalStackLayout>
</ContentView>