<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="QuickPrompt.Controls.EmptyStateView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <VerticalStackLayout
        Padding="40"
        HorizontalOptions="Center"
        Spacing="16"
        VerticalOptions="Center">

        <!--  Icon/Image  -->
        <Label
            FontFamily="MaterialIconsOutlined-Regular"
            FontSize="80"
            HorizontalOptions="Center"
            Text="{Binding Icon, Source={x:Reference Root}}"
            TextColor="{StaticResource Gray400}" />

        <!--  Title  -->
        <Label
            FontAttributes="Bold"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Style="{StaticResource Heading2TextStyle}"
            Text="{Binding Title, Source={x:Reference Root}}"
            TextColor="{StaticResource Gray900}" />

        <!--  Description  -->
        <Label
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            MaximumWidthRequest="300"
            Style="{StaticResource BodySmallTextStyle}"
            Text="{Binding Description, Source={x:Reference Root}}"
            TextColor="{StaticResource Gray600}" />

        <!--  Action Button (Optional)  -->
        <Button
            Margin="0,16,0,0"
            Command="{Binding ButtonCommand, Source={x:Reference Root}}"
            IsVisible="{Binding ShowButton, Source={x:Reference Root}}"
            Style="{StaticResource PrimaryButton}"
            Text="{Binding ButtonText, Source={x:Reference Root}}" />

    </VerticalStackLayout>

</ContentView>
