<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPrompt.Controls.EmptyStateView"
             x:Name="Root">
    
    <VerticalStackLayout Spacing="16"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Padding="40">
        
        <!-- Icon/Image -->
        <Label FontFamily="MaterialIconsOutlined-Regular"
               FontSize="80"
               HorizontalOptions="Center"
               TextColor="{StaticResource Gray400}"
               Text="{Binding Icon, Source={x:Reference Root}}" />
        
        <!-- Title -->
        <Label Style="{StaticResource Heading2TextStyle}"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               TextColor="{StaticResource Gray900}"
               Text="{Binding Title, Source={x:Reference Root}}" />
        
        <!-- Description -->
        <Label Style="{StaticResource BodySmallTextStyle}"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               TextColor="{StaticResource Gray600}"
               Text="{Binding Description, Source={x:Reference Root}}"
               MaximumWidthRequest="300" />
        
        <!-- Action Button (Optional) -->
        <Button Text="{Binding ButtonText, Source={x:Reference Root}}"
                Command="{Binding ButtonCommand, Source={x:Reference Root}}"
                IsVisible="{Binding ShowButton, Source={x:Reference Root}}"
                Style="{StaticResource PrimaryButton}"
                Margin="0,16,0,0" />
        
    </VerticalStackLayout>
    
</ContentView>
