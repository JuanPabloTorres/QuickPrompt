<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="QuickPrompt.Controls.StatusBadge"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <Border
        Padding="8,4"
        BackgroundColor="{Binding BadgeColor, Source={x:Reference Root}}"
        HorizontalOptions="Start">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12" />
        </Border.StrokeShape>

        <HorizontalStackLayout Spacing="4">

            <!--  Icon  -->
            <Label
                FontFamily="MaterialIconsOutlined-Regular"
                IsVisible="{Binding ShowIcon, Source={x:Reference Root}}"
                Style="{StaticResource BodySmallTextStyle}"
                Text="{Binding Icon, Source={x:Reference Root}}"
                TextColor="{Binding TextColor, Source={x:Reference Root}}"
                VerticalOptions="Center" />

            <!--  Text  -->
            <Label
                FontAttributes="Bold"
                Style="{StaticResource CaptionTextStyle}"
                Text="{Binding Text, Source={x:Reference Root}}"
                TextColor="{Binding TextColor, Source={x:Reference Root}}"
                VerticalOptions="Center" />

        </HorizontalStackLayout>
    </Border>

</ContentView>
