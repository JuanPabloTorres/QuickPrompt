<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPrompt.Controls.StatusBadge"
             x:Name="Root">

    <Border BackgroundColor="{Binding BadgeColor, Source={x:Reference Root}}"
            Padding="8,4"
            HorizontalOptions="Start">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12" />
        </Border.StrokeShape>

        <HorizontalStackLayout Spacing="4">
            
            <!-- Icon -->
            <Label Text="{Binding Icon, Source={x:Reference Root}}"
                   FontFamily="MaterialIconsOutlined-Regular"
                   FontSize="14"
                   TextColor="{Binding TextColor, Source={x:Reference Root}}"
                   VerticalOptions="Center"
                   IsVisible="{Binding ShowIcon, Source={x:Reference Root}}" />

            <!-- Text -->
            <Label Text="{Binding Text, Source={x:Reference Root}}"
                   FontSize="12"
                   FontAttributes="Bold"
                   TextColor="{Binding TextColor, Source={x:Reference Root}}"
                   VerticalOptions="Center" />

        </HorizontalStackLayout>
    </Border>

</ContentView>
