<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPrompt.Engines.WebView.EngineWebViewPage"
             Title="{Binding Descriptor.Name}">
    <ContentPage.Content>
        <Grid>
            <!-- WebView should always be visible -->
            <WebView x:Name="EngineWebView"
                     Source="{Binding TargetUrl}"
                     Navigated="OnWebViewNavigated"/>
            
            <!-- Loading indicator shows only while loading -->
            <ActivityIndicator IsRunning="{Binding IsLoading}" 
                             IsVisible="{Binding IsLoading}"
                             Color="{StaticResource PrimaryBlueLight}"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>