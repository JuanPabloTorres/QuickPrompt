<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPrompt.Components.Containers.ElevatedCard"
             x:Name="Root">

    <!-- 
    ==================================================================================
    ElevatedCard Component
    Version: 1.0.0
    Phase: 3.4 - Container Components
    Design System: 100% Compliant
    âœ… FIX: Renamed properties to avoid ContentView base property conflicts
    
    A card container with shadow elevation.
    
    Usage:
        <containers:ElevatedCard>
            <Label Text="Elevated Card Content" />
        </containers:ElevatedCard>
    
    Design Tokens Used:
        - Colors: CardBackground
        - Spacing: ThicknessMd
        - Sizing: RadiusMd
        - Shadow: ShadowMd
    ==================================================================================
    -->

    <Border BackgroundColor="{Binding CardBackground, Source={x:Reference Root}}"
            StrokeThickness="0"
            Padding="{Binding CardPadding, Source={x:Reference Root}}">
        
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="{Binding CardCornerRadius, Source={x:Reference Root}}" />
        </Border.StrokeShape>

        <!-- Shadow Elevation -->
        <Border.Shadow>
            <Shadow Brush="{StaticResource AppBlack}"
                    Opacity="0.15"
                    Radius="12"
                    Offset="0,4" />
        </Border.Shadow>

        <!-- Content from consumer -->
        <ContentPresenter Content="{Binding Content, Source={x:Reference Root}}" />

    </Border>

</ContentView>
