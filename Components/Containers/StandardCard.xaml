<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickPrompt.Components.Containers.StandardCard"
             x:Name="Root">

    <!-- 
    ==================================================================================
    StandardCard Component
    Version: 1.0.0
    Phase: 3.4 - Container Components
    Design System: 100% Compliant
    
    A standard card container for grouping content.
    
    Usage:
        <containers:StandardCard>
            <Label Text="Card Content" />
        </containers:StandardCard>
    
    Design Tokens Used:
        - Colors: CardBackground, BorderLight
        - Spacing: ThicknessMd
        - Sizing: RadiusMd
    ==================================================================================
    -->

    <Border BackgroundColor="{Binding BackgroundColor, Source={x:Reference Root}}"
            Stroke="{Binding BorderColor, Source={x:Reference Root}}"
            StrokeThickness="{Binding BorderThickness, Source={x:Reference Root}}"
            Padding="{Binding Padding, Source={x:Reference Root}}">
        
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="{Binding CornerRadius, Source={x:Reference Root}}" />
        </Border.StrokeShape>

        <!-- Content from consumer -->
        <ContentPresenter Content="{Binding Content, Source={x:Reference Root}}" />

    </Border>

</ContentView>
